{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "r2",
  "version": "0.1.37",
  "identifier": "com.lifefarmer.r2",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "r2",
        "width": 1400,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "copyright": "Copyright 2025 Peilin Wu",
    "license": "MIT",
    "shortDescription": "A desktop application for managing Cloudflare R2 storage buckets.",
    "publisher": "Peilin Wu",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg2NzRBRTI4QjQ1MUQzNzIKUldSeTAxRzBLSzUwaGdmZHJNYmpYSkkvQmdQQjVicjBIZjdjRGhzUkd2MXE3ZVJNYnNCU25kemEK",
      "endpoints": ["https://github.com/dickwu/r2/releases/latest/download/latest.json"],
      "windows": {
        "installMode": "quiet"
      }
    }
  }
}
