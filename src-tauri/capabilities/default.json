{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "http:default",
    "updater:default",
    "process:allow-restart",
    "dialog:default",
    "dialog:allow-open",
    "video-thumbnail:default",
    "core:event:default",
    "core:event:allow-listen",
    "core:event:allow-unlisten",
    {
      "identifier": "http:default",
      "allow": [{ "url": "https://api.cloudflare.com/*" }, { "url": "https://*" }]
    }
  ]
}
